#include <stdio.h>
#include <stdlib.h>
#define boyut 7

/*Donguler araciligiyla, yildizlarla c harfini ekrana yazdiran C dilinde yazilmis kod.*/

int bosluk(int k)
{
    int ic_bosluk;

    if(boyut%2==0)
    {
        ic_bosluk = (boyut/2) +2;
    }
    else
    {
        ic_bosluk = boyut/2;
    }
}

int main()
{
    int i,j;

    for(i=1; i<=1; i++)
    {
        for(j=1; j<=boyut+2; j++)
        {
            printf("*");
        }
        printf("\n");
    }

    for(i=1; i<=boyut; i++)
    {
        for(j=1; j<=1; j++)
        {
            printf("*");
            printf("\n");
        }
    }
    for(i=1; i<=1; i++)
    {
        for(j=1; j<=boyut+2; j++)
        {
            printf("*");
        }
        printf("\n");
    }



    return 0;
}
