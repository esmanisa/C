#include <stdio.h>
#include <stdlib.h>
#include <math.h>

#define PI 3.14159265

int main()
{
    double x, ret, val;

    printf("Please enter an angle : ");
    scanf("%lf", &x);
    val = PI / 180;
    ret = sin(x*val);
    printf("The sine of %.02lf is %lf degrees\n", x, ret);
    main();

    system("pause");
}
