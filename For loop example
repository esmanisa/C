#include <stdio.h>
#include <stdlib.h>

/*Kullanici sifirdan kucuk sayi girene kadar sayi alan(100'e kadar),
sifirdan kucuk sayi girildiginde sayilarin toplamini ekrana yazdiran C dilinde yazilmis kod parcasi.*/

int main()
{
    int i,sayi;
    int toplam=0;
    for (i=1;i<=100; i++)
    {
        printf("sayi gir: ");
        scanf("%d", &sayi);
        if (sayi<0)
        {
            printf("%d", toplam);
            break;
        }

    toplam=toplam+sayi;
     }

    return 0;
}
